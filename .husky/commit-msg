#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Простая проверка сообщений коммитов
# Можно заменить на @commitlint/cli для более строгих правил

commit_msg=$(cat "$1")

# Проверяем минимальную длину
if [ ${#commit_msg} -lt 10 ]; then
  echo "❌ Сообщение коммита слишком короткое (минимум 10 символов)"
  exit 1
fi

# Проверяем, что сообщение не пустое
if [ -z "$commit_msg" ]; then
  echo "❌ Сообщение коммита не может быть пустым"
  exit 1
fi

echo "✅ Сообщение коммита прошло проверку"
