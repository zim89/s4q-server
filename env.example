# ===========================================
# Space4Quizlet Server - Environment Variables
# ===========================================

# ===========================================
# Application Configuration
# ===========================================

# Режим работы приложения
NODE_ENV=development

# Порт приложения
PORT=3001

# Global API prefix
GLOBAL_PREFIX=api

# ===========================================
# JWT Configuration
# ===========================================

# JWT secret key (обязательно измените в production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT access token TTL
JWT_ACCESS_TOKEN_TTL=15m

# JWT refresh token TTL
JWT_REFRESH_TOKEN_TTL=7d

# Cookie domain
COOKIE_DOMAIN=localhost

# Allowed origins (разделите запятыми для нескольких)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL connection string
POSTGRES_URI=postgresql://postgres:dev_password@localhost:5433/s4q_db_dev

# Shadow database for migrations (опционально)
POSTGRES_SHADOW_URI=

# Database pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Database logging
DB_LOGGING_ENABLED=true
DB_SLOW_QUERY_THRESHOLD=1000

# Database seeding
DB_SEED_ENABLED=false

# ===========================================
# Database Monitoring (опционально)
# ===========================================

# Metrics collection
DB_METRICS_ENABLED=false
DB_METRICS_INTERVAL=60

# Alert thresholds
DB_ALERT_SLOW_QUERY=5000
DB_ALERT_CONNECTION_ERRORS=10

# Query logging
DB_LOG_QUERIES=false
DB_LOG_PARAMETERS=false
DB_LOG_QUERY_TIME=true

# ===========================================
# Integrations Configuration
# ===========================================

# Free Dictionary API
FREE_DICTIONARY_API_URL=https://api.dictionaryapi.dev/api/v2/entries/en
FREE_DICTIONARY_API_TIMEOUT=5000
FREE_DICTIONARY_API_RETRIES=3
