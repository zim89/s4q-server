/// Enum'ы для контента и медиа

/// Тип контента
/// 
/// Определяет формат и способ представления контента.
/// Используется для правильного отображения и обработки различных типов материалов.
enum ContentType {
  NOTICE            // Документ - для создания текстовых документов (правила, заметки)
  LANGUAGE          // Изучение языка - карточки для изучения языка
  QUIZ              // Викторина - вопрос/ответ
}

/// Статус контента
/// 
/// Определяет жизненный цикл контента в системе.
/// Используется для управления публикацией и доступностью материалов.
enum ContentStatus {
  DRAFT             // Черновик (в разработке)
  REVIEW            // На рассмотрении
  APPROVED          // Одобрен для публикации
  PUBLISHED         // Опубликован и доступен
  ARCHIVED          // Архивирован (неактивен)
  DELETED           // Удален
  SUSPENDED         // Приостановлен (временно недоступен)
}

/// Тип медиа файла
/// 
/// Определяет формат и тип медиа файлов в системе.
/// Используется для валидации, обработки и правильного отображения файлов.
enum MediaType {
  IMAGE_JPG         // JPEG изображение
  IMAGE_PNG         // PNG изображение
  IMAGE_GIF         // GIF изображение
  IMAGE_SVG         // SVG изображение
  AUDIO_MP3         // MP3 аудио файл
  AUDIO_WAV         // WAV аудио файл
  AUDIO_OGG         // OGG аудио файл
  VIDEO_MP4         // MP4 видео файл
  VIDEO_WEBM        // WebM видео файл
  DOCUMENT_PDF      // PDF документ
  DOCUMENT_DOCX     // DOCX документ
  PRESENTATION_PPTX // PPTX презентация
}

/// Уровень доступа к контенту
/// 
/// Определяет права доступа к контенту для различных типов пользователей.
/// Используется для контроля видимости и безопасности контента.
enum ContentAccess {
  PUBLIC            // Публичный доступ
  PRIVATE           // Приватный (только владелец)
  SHARED            // Общий (для группы пользователей)
  PREMIUM           // Премиум (для премиум пользователей)
  RESTRICTED        // Ограниченный доступ
  ADMIN_ONLY        // Только для администраторов
}
