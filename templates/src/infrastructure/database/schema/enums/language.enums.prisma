/// Enum'ы для языковых характеристик и типов контента

/// Уровень владения языком
/// 
/// Определяет уровень сложности контента и прогресс пользователя.
/// Основан на общеевропейских компетенциях владения иностранным языком (CEFR).
enum LanguageLevel {
  A1              // Начальный уровень - базовые знания
  A2              // Элементарный уровень - простые фразы
  B1              // Средний уровень - независимое использование
  B2              // Выше среднего - свободное общение
  C1              // Продвинутый уровень - профессиональное владение
  C2              // В совершенстве - носитель языка
}

/// Части речи
/// 
/// Классификация слов по их грамматической функции в предложении.
/// Используется для категоризации карточек и создания упражнений.
enum PartOfSpeech {
  NOUN            // Существительное
  PRONOUN         // Местоимение
  VERB            // Глагол
  ADJECTIVE       // Прилагательное
  ADVERB          // Наречие
  PREPOSITION     // Предлог
  CONJUNCTION     // Союз
  INTERJECTION    // Междометие
  ARTICLE         // Артикль
  PARTICLE        // Частица
  PHRASE          // Фраза
}

/// Тип набора карточек
/// 
/// Определяет назначение и структуру набора карточек.
/// Влияет на логику изучения и отображения контента.
enum SetType {
  LANGUAGE        // Языковые карточки
  GRAMMAR         // Грамматические правила
  VOCABULARY      // Словарный запас
  CUSTOM          // Пользовательские наборы
  SYSTEM          // Системные (базовые) наборы
}

/// Тип глагола
/// 
/// Классификация глаголов по их спряжению и использованию.
/// Определяет логику создания форм и упражнений для глаголов.
enum VerbType {
  REGULAR         // Правильный глагол (следует стандартным правилам)
  IRREGULAR       // Неправильный глагол (не следует стандартным правилам)
  MIXED           // Глагол с альтернативными формами (learned/learnt)
  MODAL           // Модальный глагол (can, could, may, might)
  AUXILIARY       // Вспомогательный глагол (be, have, do)
  PHRASAL         // Фразовый глагол (look up, give up)
  COMPOUND        // Составной глагол (babysit, proofread)
}
