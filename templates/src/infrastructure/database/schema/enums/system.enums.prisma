/// Enum'ы для системных функций и аудита

/// Тип действия в системе
/// 
/// Определяет различные типы действий, которые могут выполнять пользователи.
/// Используется для аудита и аналитики пользовательской активности.
enum ActionType {
  CREATE           // Создание новой сущности
  READ             // Чтение/просмотр сущности
  UPDATE           // Обновление сущности
  DELETE           // Удаление сущности
  LOGIN            // Вход в систему
  LOGOUT           // Выход из системы
  REGISTER         // Регистрация
  PASSWORD_CHANGE  // Смена пароля
  EMAIL_VERIFY     // Подтверждение email
  PROFILE_UPDATE   // Обновление профиля
  SETTINGS_CHANGE  // Изменение настроек
  CONTENT_ACCESS   // Доступ к контенту
  DOWNLOAD         // Скачивание файла
  UPLOAD           // Загрузка файла
  SHARE            // Поделиться контентом
  EXPORT           // Экспорт данных
  IMPORT           // Импорт данных
}

/// Тип ресурса в системе
/// 
/// Определяет типы ресурсов, с которыми взаимодействуют пользователи.
/// Используется для категоризации действий в аудите.
enum ResourceType {
  USER             // Пользователь
  CARD             // Карточка
  SET              // Набор карточек
  ACHIEVEMENT      // Достижение
  PROGRESS         // Прогресс
  SESSION          // Сессия
  FOLDER           // Папка
  TAG              // Тег
  LANGUAGE         // Язык
  GRAMMAR_RULE     // Грамматическое правило
  IRREGULAR_VERB   // Неправильный глагол
  DEFINITION       // Определение
  EXAMPLE          // Пример
  CONTENT          // Контент
  MEDIA            // Медиа файл
  SETTINGS         // Настройки
  PROFILE          // Профиль
}

/// Тип устройства
/// 
/// Определяет тип устройства, с которого пользователь взаимодействует с системой.
/// Используется для аналитики и безопасности.
enum DeviceType {
  DESKTOP          // Настольный компьютер
  LAPTOP           // Ноутбук
  TABLET           // Планшет
  MOBILE           // Мобильный телефон
  SMART_TV         // Умный телевизор
  CONSOLE          // Игровая консоль
  WEARABLE         // Носимые устройства
  UNKNOWN          // Неизвестное устройство
}

/// Тип сессии
/// 
/// Определяет различные типы сессий пользователей.
/// Используется для управления безопасностью и аналитики.
enum SessionType {
  WEB              // Веб-сессия
  MOBILE_APP       // Мобильное приложение
  API              // API сессия
  OAUTH            // OAuth сессия
  GUEST            // Гостевая сессия
  ADMIN            // Административная сессия
  SYSTEM           // Системная сессия
}
