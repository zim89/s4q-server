/// Enum'ы для системы обучения и достижений

/// Тип достижения
/// 
/// Определяет различные достижения, которые может получить пользователь.
/// Используется для геймификации и мотивации к обучению.
enum AchievementType {
  FIRST_CARD          // Первая карточка
  FIRST_SET           // Первый набор
  STREAK_DAYS         // Серия дней изучения
  PERFECT_SCORE       // Идеальный результат
  LEVEL_UP            // Повышение уровня
  COMPLETION          // Завершение курса
  SPEED_DEMON         // Быстрое изучение
  PERSEVERANCE        // Упорство в изучении
  VOCABULARY_MASTER   // Мастер словарного запаса
  GRAMMAR_EXPERT      // Эксперт по грамматике
  CONSISTENCY         // Регулярность занятий
  SOCIAL_LEARNER      // Социальное обучение
}

/// Сложность карточки
/// 
/// Определяет уровень сложности карточки для изучения.
/// Влияет на алгоритмы интервального повторения и подбор контента.
enum CardDifficulty {
  EASY                // Легкий уровень
  MEDIUM              // Средний уровень
  HARD                // Сложный уровень
  EXPERT              // Экспертный уровень
}

/// Режим изучения
/// 
/// Определяет различные режимы и методы изучения контента.
/// Используется для настройки алгоритмов обучения и интерфейса.
enum StudyMode {
  LEARN              // Изучение новых карточек
  REVIEW             // Повторение изученных
  PRACTICE           // Практика
  TEST               // Тестирование
  SPACED_REPETITION  // Интервальное повторение
  FLASHCARD          // Карточки
  QUIZ               // Викторина
  WRITING            // Письменные упражнения
  SPEAKING           // Устные упражнения
  LISTENING          // Аудирование
}

/// Тип упражнения
/// 
/// Определяет различные типы упражнений для закрепления материала.
/// Используется для создания разнообразных заданий и оценки знаний.
enum ExerciseType {
  MULTIPLE_CHOICE    // Множественный выбор
  FILL_IN_BLANK      // Заполнить пропуск
  MATCHING           // Сопоставление
  TRANSLATION        // Перевод
  SENTENCE_BUILDING  // Построение предложений
  PRONUNCIATION      // Произношение
  GRAMMAR_CORRECTION // Исправление грамматики
  WORD_ORDER         // Порядок слов
  CONJUGATION        // Спряжение глаголов
  VOCABULARY_QUIZ    // Словарная викторина
}
