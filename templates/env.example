# ===========================================
# Space4Quizlet Server - Environment Variables
# ===========================================

# ===========================================
# Application Configuration
# ===========================================

# Режим работы приложения
NODE_ENV=development

# Порт приложения
PORT=3001

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL connection string
POSTGRES_URI=postgresql://postgres:dev_password@localhost:5433/s4q_db_dev

# Shadow database for migrations (опционально)
POSTGRES_SHADOW_URI=postgresql://postgres:password@localhost:5433/s4q_db_shadow

# Database pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Database logging
DB_LOGGING_ENABLED=true
DB_SLOW_QUERY_THRESHOLD=1000

# Database seeding
DB_SEED_ENABLED=false

# ===========================================
# JWT Configuration
# ===========================================

# JWT secret key (обязательно измените в production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT refresh secret key
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# JWT expiration times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Database Monitoring (опционально)
# ===========================================

# Metrics collection
DB_METRICS_ENABLED=false
DB_METRICS_INTERVAL=60

# Alert thresholds
DB_ALERT_SLOW_QUERY=5000
DB_ALERT_CONNECTION_ERRORS=10

# Query logging
DB_LOG_QUERIES=false
DB_LOG_PARAMETERS=false
DB_LOG_QUERY_TIME=true

# ===========================================
# Email Configuration (опционально)
# ===========================================

# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email from address
EMAIL_FROM=noreply@space4quizlet.com

# ===========================================
# AWS S3 Configuration (опционально)
# ===========================================

# AWS credentials
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# S3 bucket
S3_BUCKET=space4quizlet-assets

# ===========================================
# Stripe Configuration (опционально)
# ===========================================

# Stripe keys
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key

# Webhook secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# Telegram Bot Configuration (опционально)
# ===========================================

# Telegram bot token
TELEGRAM_BOT_TOKEN=your-bot-token

# Telegram chat ID
TELEGRAM_CHAT_ID=your-chat-id

# ===========================================
# Development Configuration
# ===========================================

# Enable debug logging
DEBUG=true

# CORS origins (разделите запятыми для нескольких)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
