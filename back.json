  //     "border": "1px solid oklch(0.718 0.202 349.761)",
  //     "borderRadius": "2px"
  //   }
  // ],
  /* */
  "editor.suggest.showColors": true,
  "cssVarColorDecorator.supportedLanguages": ["css", "scss", "tailwindcss", "html"],

  // "prettier.pluginSearchDirs": ["."],
