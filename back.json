{
  /* ‚öôÔ∏è VS CODE SETTINGS  */

  /* Theme & Color Theme */
  "workbench.colorTheme": "One Dark Pro Darker",
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.folders.theme": "classic",

  /* Explorer & File Icons */
  "explorer.compactFolders": false,
  "workbench.tree.indent": 12,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.iconTheme": "material-icon-theme",

  /* Editor Formatting & Behavior */
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "files.autoSave": "onFocusChange",

  /* Editor Appearance & Usability */
  "editor.fontSize": 13,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.stickyScroll.enabled": false,
  "editor.linkedEditing": true,
  "editor.quickSuggestions": { "strings": "on" },

  /* Breadcrumbs */
  "breadcrumbs.filePath": "on",
  "breadcrumbs.showClasses": false,
  "breadcrumbs.symbolPath": "off",

  /* Terminal */
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.suggest.enabled": true,

  /* ‚Äî TypeScript & IntelliSense */
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.suggest.completeFunctionCalls": true,

  /* ‚Äî Miscellaneous */
  "files.associations": { "*.css": "tailwindcss" },
  "workbench.editor.customLabels.patterns": {
    "**/app/**/[[]*[]]/[[]*[]]/page.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/page.tsx",
    "**/app/**/[[]*[]]/page.tsx": "${dirname(1)}/${dirname}/page.tsx",
    "**/app/**/page.tsx": "${dirname}/page.tsx",
    "**/app/**/[[]*[]]/[[]*[]]/layout.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/layout.tsx",
    "**/app/**/[[]*[]]/layout.tsx": "${dirname(1)}/${dirname}/layout.tsx",
    "**/app/**/layout.tsx": "${dirname}/layout.tsx"
  },

  /* üö∏ PLUGIN & EXTENSION SETTINGS */

  /* Prettier */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.jsxSingleQuote": true,

  /* Tailwind CSS IntelliSense */
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.configFile": null,
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.classAttributes": ["class", "className", "ui", "ngClass"],
  "tailwindCSS.experimental.classRegex": [["ui:\\s*{([^)]*)\\s*}", "(?:'|\"|`)([^']*)(?:'|\"|`)"]],

  /* Color Highlight (color-highlight) */
  "color-highlight.enable": false,
  "color-highlight.markerType": "dot-before",

  /* VS Code Color Decorations */
  "editor.colorDecorators": false,

  /* GitHub Copilot */
  "github.copilot.enable": { "enable": true },

  /* ‚Äî Workbench Color Customizations */
  "workbench.colorCustomizations": {
    "oklch": "#RRGGBB"
  },
  // –∫–∞—Å—Ç–æ–º–∏–∑–∞—Ü–∏—è —Ü–≤–µ—Ç–æ–≤ –¥–ª—è —Ç–µ–≥–æ–≤ <template> –∏ <script> –≤ .vue —Ñ–∞–π–ª–∞—Ö
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "entity.name.tag.template",
        "settings": { "foreground": "#2dd4bf" }
      },
      {
        "scope": "entity.name.tag.script",
        "settings": { "foreground": "#2dd4bf" }
      }
    ]
  },

  /* ================================= */

  "window.density.editorTabHeight": "compact",
  "cSpell.language": "en,ru,uk",
  "cSpell.userWords": [
    "APPWRITE",
    "authkit",
    "autoincrement",
    "callees",
    "clsx",
    "cuid",
    "embla",
    "engly",
    "esbenp",
    "IMAGEKIT",
    "imagekitio",
    "LOCALNO",
    "lucide",
    "mantine",
    "Meslo",
    "Nuxt",
    "nuxtjs",
    "oklch",
    "partialize",
    "reduxjs",
    "shadcn",
    "Slideover",
    "sonarjs",
    "sonner",
    "steiger",
    "supabase",
    "tanstack",
    "textnodes",
    "toastify",
    "todohighlight",
    "Uploadthing",
    "usehooks",
    "WORKOS",
    "Xmark"
  ],
  "vs-code-prettier-eslint.prettierLast": true,
  "reactSnippets.settings.importReactOnTop": false,
  "color-highlight.markRuler": false,
  "workbench.startupEditor": "none",
